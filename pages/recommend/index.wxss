/* pages/recommend/index.wxss */
.swiperBox{
height: 300rpx;
position: relative;
}
.swiperWrapperBackground{
  height: 200rpx;
  background: #d44439;
}
.swiperContainer{
  position: absolute;
  width: 730rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  border-radius: 10rpx;
  overflow: hidden;
}
.swiper-image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.recommendLists{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}
.recommend-item{
  margin: 0 0.667%;
}
.miniAudio{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
}