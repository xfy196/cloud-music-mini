@import "../../assets/iconfont/iconfont.wxss";
.songListContainer{
  height: 100%;
  background: #f2f3f4;
}
.background{
  width: 100%;
  height: 100%;
  background-position: left top;
  filter: blur(40rpx);
  background-repeat: no-repeat;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
}
.img_wrapper{
  width: 240rpx;
  height: 240rpx;
  position: relative;
  z-index: 10;
}
.img_wrapper .image{
  width: 240rpx;
  height: 240rpx;
  border-radius: 6rpx;
}
.icon-headset{
  font-size: 28rpx;
  color: #f1f1f1;
}
.play_count {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #f1f1f1;
  display: flex;
  align-items: center;
}
.headBox{
  display: flex;
  justify-content: space-around;
  position: relative;
  height: 550rpx;
  padding: 20rpx 40rpx;
  padding-bottom: 100rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  background-size: 100%;
  align-items: center;
  width: 100%;
}
.headBox .desc_wrapper{
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  padding: 0 20rpx;
  z-index: 10;
}
.headBox .desc_wrapper .title {
  color: #f1f1f1;
}
.headBox .desc_wrapper .person{
  display: flex;
}
.headBox .desc_wrapper .person .name {
  color: #bba8a8;
  font-size: 28rpx;
}
.headBox .desc_wrapper .person .avatar {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border-radius: 100%;
}
.opList{
  z-index: 10;
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 60rpx 40rpx 60rpx;
  margin: -200rpx 0 0 0;
}
.opList > view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #f1f1f1;
  font-size: 24rpx;
}
.songListPlay{
  background: #fff;
  border-radius: 20rpx;
  z-index: 10;
  position: relative;
}
.songListPlay .songPlayHead{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-left: 20rpx;
  position: relative;
}
.songListPlay .songPlayHead .playAll{
  flex: 1;
  display: flex;
  align-items: center;
}
.songListPlay .songPlayHead .playAll .iconfont {
  font-size: 48rpx;
}
.songListPlay .songPlayHead .playAll .playText{
  margin: 0 0 0 20rpx;
  font-size: 32rpx;
}
.songListPlay .songPlayHead .playAll .playCount{
  font-size: 24rpx;
  color: #bba8a8;
  margin-left: 10rpx;
}
.songListPlay .songPlayHead .collectionBtn{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #d44439;
  color: #f1f1f1;
  width: 260rpx;
  border-radius: 6rpx;
}
.songListPlay .songPlayHead .collectionBtn .iconfont {
  font-size: 24rpx;
  margin: 0 10rpx 0 20rpx;
}
.songListPlay .songPlayHead .collectionBtn .collectionText{
  font-size: 28rpx;
  line-break: 68rpx;
}
.songList .songItem{
  display: flex;
}
.songList .songItem .index {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  width: 120rpx;
  height: 120rpx;
}
.songList .songItem .info {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: calc(100% - 120rpx);
}
.songList .songItem .info .songName {
  color: #2E3030;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.songList .songItem .info .songSubTitle {
  font-size: 24rpx;
  color: #bba8a8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}